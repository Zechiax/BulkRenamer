<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="448.0" prefWidth="678.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.zechiax.builkrenamerapp.RenamerController">

    <!-- Title Label -->
    <Label alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Bulk Renaming App" AnchorPane.leftAnchor="250" AnchorPane.topAnchor="20" />

    <!-- Left VBox -->
    <VBox spacing="5" AnchorPane.bottomAnchor="60" AnchorPane.leftAnchor="50" AnchorPane.topAnchor="60">
        <Label text="Selected Files:" />
        <ListView fx:id="selectedFilesListView" VBox.vgrow="ALWAYS" />
        <TableView fx:id="selectedFilesTableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="oldNameColumn" text="Old Name" />
                <TableColumn fx:id="newNameColumn" text="New Name" />
                <!-- More detailed info -->
                <TableColumn fx:id="fileSizeColumn" text="File Size" />
                <TableColumn fx:id="dateModifiedColumn" text="Date Modified" />
                <TableColumn fx:id="pathColumn" text="Path" />
            </columns>
        </TableView>
    </VBox>

    <!-- Right VBox -->
    <VBox spacing="5" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="60">
        <Label text="New Name:" />
        <ListView fx:id="renamedFilesListView" prefHeight="276.0" prefWidth="209.0" VBox.vgrow="ALWAYS" />
    </VBox>

    <!-- Bottom Buttons -->
    <HBox spacing="10" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="150">
        <Button fx:id="addFilesButton" text="Add Files" />
        <Button fx:id="removeSelectedButton" text="Remove Selected" />
        <Button fx:id="clearAllButton" text="Clear All" />
        <TextField fx:id="newNameTextField" maxWidth="Infinity" VBox.vgrow="ALWAYS" text="[N].[E]" />
    </HBox>
     <Button fx:id="renameButton" layoutX="300.0" layoutY="213.0" text="Rename" />


</AnchorPane>
